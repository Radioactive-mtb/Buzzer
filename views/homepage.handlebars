{{! Display a feed of posts }}
<h2>Posts</h2>
<ul>
  {{#each posts as |post|}}
    <li><strong>{{post.title}}</strong> - {{post.post_content}} - {{post.user.username}} ({{ format_date post.createdAt}})</li>
  {{/each}}
</ul>

{{! Form to submit a new post }}
<form id="new-post-form" action="/api/posts" method="POST">
  <div>
    <label for="post-title">Title:</label>
    <input type="text" id="post-title" name="title">
  </div>
  <div>
    <label for="post-content">Content:</label>
    <textarea id="post-content" name="content" rows="3"></textarea>
  </div>
  <input type="submit" value="Post">
</form>

<script src="/js/post.js"></script>